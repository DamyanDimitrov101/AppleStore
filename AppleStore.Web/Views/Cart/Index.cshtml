@model AppleStore.InputModels.CartList_All_PurchasedInputModel

@{
    ViewBag.Title = "Index";
}

<div class="container px-4 px-lg-5 py-lg-5">
    <h2 class="my-5">Your Cart <i class="fas fa-shopping-cart text-primary"></i></h2>

    <table>
        <thead class="text-center">
            <tr>
                <td class="table-info text-start px-3">Name</td>
                <td class="table-info">Count</td>
                <td class="table-info">Type</td>
                <td class="table-info">Single Price</td>
                <td class="table-info">Total</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllPurchased)
            {
                <tr class="row m-3 border-bottom d-lg-table-row">
                    <td class="card-text text-black">@item.Apple.Name</td>
                    <td class="card-text text-primary">@item.Count</td>
                    <td class="card-text text-secondary">@item.Apple.Type</td>
                    <td class="card-text text-secondary">@item.Apple.Price</td>
                    <td class="card-text text-secondary">@(item.Apple.Price*item.Count)</td>
                    <td class="card-text text-danger w-50">
                        @using (Html.BeginForm("Delete", "Cart",
                            FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="PurchasedApple" id="PurchasedApple" value="@item.PurchasedAppleId" />
                            <input type="submit" class="btn-outline-danger rounded-3" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex w-100 justify-content-between">
        <div class="text-start px-1 text-primary fw-bold my-3 w-50">
            @Html.Label("Discounts applied:")

            @foreach (var discount in Model.DiscountsApplied)
            {
                @Html.Partial("_DiscountView", discount, new ViewDataDictionary(ViewData)
                { new KeyValuePair<string, object>("onClickFunc", "GetDetails") })
            }
        </div>

        <div class="border-top text-end px-1 fw-bold text-muted">
            <div class="m-4">After the <span class="text-info text-uppercase">discounts</span> the total price is: <h4 class="text-end mt-3 text-danger fw-bolder mx-3">@Model.Total lv.</h4></div>

            @using (Html.BeginForm("Buy", "Cart", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => Model.CartId)
                @Html.HiddenFor(model => Model.AllPurchased)
                @Html.HiddenFor(model => Model.Total)

                <button type="submit" class="fw-bold btn btn-primary rounded-pill text-uppercase">Buy Now!</button>
            }
        </div>
    </div>
</div>
